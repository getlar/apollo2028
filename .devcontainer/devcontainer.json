{
    "name": "Swabber",
    "build": {
        "dockerfile": "../Dockerfile",
        "args": {
            "platform": "linux/amd64"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "github.vscode-github-actions",
                "github.copilot",
                "github.copilot-chat",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "workspaceFolder": "/usr/src/swabber",
    "mounts": [
        "source=${localWorkspaceFolder},target=/usr/src/swabber,type=bind,consistency=cached"
    ],
    "forwardPorts": [8888, 8521],
    "runArgs": [
        "--platform", "linux/amd64",
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
        "--env", "DISPLAY=${localEnv:DISPLAY}",
        "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--volume", "${localEnv:HOME}/.Xauthority:/root/.Xauthority:rw"
    ],
    "postStartCommand": "export DISPLAY=${localEnv:DISPLAY}"
}
